{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{if .Segments.Git.RepoName}} {{.Segments.Git.RepoName}} {{else}} {{.Folder}} {{end}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "foreground": "#f7ecef",
          "style": "plain",
          "properties": {
            "display_host": true
          },
          "template": "┌ {{ if .SSHSession }}SSH {{ end }}{{ .UserName }}@{{ .HostName }} "
        },
        {
          "type": "path",
          "background": "#ff5623",
          "foreground": "#332c2c",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "agnoster_full"
          },
          "style": "powerline",
          "template": " {{ .Path }} "
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "background": "#a580a1",
          "foreground": "#332c2c",
          "properties": {
            "display_mode": "always",
            "display_version": false,
            "display_virtual_env": true,
            "virtual_env_symbol": "py "
          },
          "template": " {{ if .Venv }}{{ .Venv }}{{ end }} "
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#332c2c",
          "background": "#dda895",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ff7a3f{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ac1f16{{ end }}",
            "{{ if gt .Ahead 0 }}#d18a5e{{ end }}",
            "{{ if gt .Behind 0 }}#a580a1{{ end }}"
          ],
          "template": " ⎇ {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} │{{ end }}{{ if .Staging.Changed }} {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} ≡ {{ .StashCount }}{{ end }} ",
          "properties": {
            "branch_ahead_icon": "↑",
            "branch_behind_icon": "↓",
            "branch_gone": "≢",
            "branch_icon": "",
            "branch_identical_icon": "≡",
            "cherry_pick_icon": "✓ ",
            "commit_icon": "• ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "merge_icon": "◧ ",
            "no_commits_icon": "∅",
            "rebase_icon": "↺ ",
            "tag_icon": "◦ ",
            "untracked_modes": {
              "/Users/user/Projects/oh-my-posh/": "no"
            }
          }
        },
        {
          "type": "terraform",
          "background": "#e0d5be",
          "foreground": "#332c2c",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " tf {{ .WorkspaceName }}{{ if .Version }} {{ .Version }}{{ end }} "
        },
        {
          "type": "status",
          "background": "#ac1f16",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " {{ if gt .Code 0 }}ERR{{ else }}OK{{ end }} "
        },
        {
          "type": "time",
          "foreground": "#bc9e94",
          "style": "plain",
          "properties": {
            "time_format": "15:04:05"
          },
          "template": " │ {{ .CurrentDate | date .Format }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "foreground": "#f7ecef",
          "style": "plain",
          "template": "└"
        },
        {
          "type": "text",
          "foreground": "#e0d5be",
          "style": "plain",
          "template": "─>"
        }
      ]
    }
  ],
  "final_space": true,
  "version": 3,
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#e0d5be",
    "template": "└─> "
  },
  "secondary_prompt": {
    "background": "transparent",
    "foreground": "#e0d5be",
    "template": "›"
  }
}
